<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- TaGoule -->
	<AchievementsExpanded.AchievementDef MayRequire="Ludeon.RimWorld.Anomaly">
		<defName>JD_TaGoule</defName>
		<label>Tagoule</label>
		<description>Lose a total of 20 ghouls.</description>
		<tab>VAE_DLCTab</tab>

		<tracker Class="AchievementsExpanded.KillTracker">
			<kindDef>Ghoul</kindDef>
			<count>20</count>
		</tracker>

		<texPath>Achievements/JD_TaGoule</texPath>
		<points>15</points>
	</AchievementsExpanded.AchievementDef>

<!-- Gouldorak -->
	<AchievementsExpanded.AchievementDef MayRequire="Ludeon.RimWorld.Anomaly">
		<defName>JD_Gouldorak</defName>
		<label>Gouldorak</label>
		<description>Have a ghoul plating and a metalblood heart on the same ghoul.</description>
		<tab>VAE_DLCTab</tab>
		
		<tracker Class="AchievementsExpanded.MultiHediffTracker">
			<defs>
				<li>
					<key>GhoulPlating</key>
					<value>1</value>
				</li>
				<li>
					<key>MetalbloodHeart</key>
					<value>1</value>
				</li>
			</defs>
			<onlyCountGhouls>True</onlyCountGhouls>
		</tracker>

		<texPath>Achievements/JD_Gouldorak</texPath>
		<points>10</points>
	</AchievementsExpanded.AchievementDef>

<!-- Astérism -->
	<AchievementsExpanded.AchievementDef MayRequire="Ludeon.RimWorld.Anomaly">
		<defName>JD_Asterism</defName>
		<label>Astérism!</label>
		<description>Have all 3 obelisks on your map.</description>
		<tab>VAE_DLCTab</tab>

		<tracker Class="AchievementsExpanded.ItemTracker">
			<thingList>
				<li>
					<key>WarpedObelisk_Abductor</key>
					<value>1</value>
				</li>
				<li>
					<key>WarpedObelisk_Duplicator</key>
					<value>1</value>
				</li>
				<li>
					<key>WarpedObelisk_Mutator</key>
					<value>1</value>
				</li>
			</thingList>
			<mustHaveAll>true</mustHaveAll>
		</tracker>

		<texPath>Achievements/JD_Asterism</texPath>
		<points>50</points>
	</AchievementsExpanded.AchievementDef>

